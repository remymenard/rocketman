<h1>My Rockets Requests</h1>

<% @orders.each do |order| %>
  <div class='card mx-auto my-3 container h-100'>
    <div class='row h-100'>

      <div class="card-category col-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path order.rocket.photo.key, height: 300, width: 400, crop: :fill %>')">
        <h2><%= order.rocket.name %></h2>
        <p>From <span class='highlighted-text'><%= order.begin_date.strftime("%d of %B, %Y") %></span><br/>To <span class='highlighted-text'><%= order.end_date.strftime("%d of %B, %Y") %></span></p>
      </div>

      <div class='col-5 p-3 d-flex flex-column justify-content-center'>
        <div class='ml-5'>
          <p><strong>Renter:</strong><br/><%= order.renter.first_name %> <%= order.renter.last_name %></p>
          <p><strong>Total price:</strong><br/><%= order.total_price %>$</p>
        </div>
      </div>

      <div class='col-2 p-3 d-flex flex-column justify-content-center align-items-center'>
        <% if order.status == 'Pending' %>
          <%= link_to accept_owner_order_path(order), method: 'patch' do%>
            <button type="button" class="btn btn-success m-3">Accept</button>
          <% end %>
          <%= link_to decline_owner_order_path(order), method: 'patch' do%>
            <button type="button" class="btn btn-danger m-3">Decline</button>
          <% end %>
        <% else %>
          <p class='text-center'>
            <strong>Status:</strong><br/><%= order.status %>
          </p>
            <%= link_to cancel_owner_order_path(order), method: 'patch' do%>
              <button type="button" class="btn btn-light">Cancel</button>
            <% end %>
        <% end %>
      </div>

    </div>
  </div>

<% end %>
