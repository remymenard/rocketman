<%= render 'shared/background' do %>
<div class="justify-content-center">
<div class="banner justify-content-center">
  <div class="container align-items-center">
    <h1 class = "mb-3" id='neon-title'>RocketMan</h1>
    <%# <p>Take off now</p> %>
    <div class="row">
      <div class="col-sm-12" id="formContainer">
        <div class="form-inline justify-content-center text-center mt-2 id="SignToNewsletterForm">
          <%= simple_form_for :search, url: rockets_path, method: "GET",
            wrapper: :inline_form,
            html: { class: "form-inline" },
            wrapper_mappings: {
              boolean: :inline_boolean
            }  do |f| %>
            <%= f.input :adress, input_html: {value: "Destination", class: "mb-2 mr-sm-2"} %>
            <%= f.input :begin_date, input_html: {value: "From", class: "mb-2 mr-sm-2"} %>
            <%= f.input :end_date, input_html: {value: "To", class: "mb-2 mr-sm-2 pt-2"} %>
            <%= button_tag( :class => "btn btn-primary btn-lg mb-2") do %>
              TAKE OFF <i class="fas fa-space-shuttle"></i>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

</div>
<% end %>
<i class="fas fa-space-shuttle"></i>
