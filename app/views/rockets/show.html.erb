

<div class="map" style="background-image: url('https://source.unsplash.com/random')"></div>
  <div class= "container margin-top-negative">
    <div class ="row">
      <div class="col-8">
        <div class="rocket-show-card " style= "background-color: #eeeeee">
          <h1><strong><%= @rocket.name %></strong></h1>
          <p>rocket available on <%= @rocket.location %></p>
        </div>

        <div class="rocket-show-card " style= "background-color: #eeeeee">
          <h3>A bit more about this flat...</h3>
          <p>autonomy: <%= @rocket.autonomy %> année lumière</p>
          <p>price: <%= @rocket.daily_price %> <i class="fas fa-dollar-sign"></i></p>
        </div>
        <div style= "color: purple"><i class="far fa-hand-point-left"></i> <%= link_to 'Back', rockets_path%></div>
      </div>

      <div class="col-4">
        <div class="rocket-show-card p-3" style= "background-color: #eeeeee">
          <h5>Book this rocket!</h5>
          <%= simple_form_for [@rocket, @order] do |f| %>
            <%= f.input :begin_date, as: :string, required: false, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"}  %>
            <br>
            <p>Total price: <span class="total_price"><%=  %> <i class="fas fa-dollar-sign"></i></span></p>
            <%= f.submit "book", class: "btn-purple book mt-3 p-2" %>
          <% end %>

      </div>
    </div>
  </div>
</div>

